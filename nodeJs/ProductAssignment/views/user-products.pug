extends layout

block content
  section
    h1 My Products (User Added)
    ul
      if userProducts.length > 0
        each product in userProducts
          li
            h3= product.name
            p= product.description
            p Price: $#{product.price}
            p Availability: #{product.availability ? 'In Stock' : 'Out of Stock'}
      else
        p You have not added any products yet.
